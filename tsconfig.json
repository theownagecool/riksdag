{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "CommonJS",
        "noEmit": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "paths": {
            "@client/*": ["client/*"],
            "@common/*": ["common/*"],
            "@server/*": ["server/*"]
        },
        "strict": true,
        "target": "es2015",
        "jsx": "react"
    },
    "include": ["common/**/*", "client/**/*", "server/**/*"],
    "exclude": []
}
