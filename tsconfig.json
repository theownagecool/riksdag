{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "CommonJS",
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "paths": {
            "@client/*": [
                "client/*"
            ],
            "@common/*": [
                "common/*"
            ],
            "@server/*": [
                "server/*"
            ]
        },
        "strict": true,
        "target": "es2015"
    },
    "include": [
        "common/**/*",
        "client/**/*",
        "server/**/*"
    ],
    "exclude": []
}